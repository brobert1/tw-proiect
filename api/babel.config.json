{
  "presets": ["@babel/preset-env"],
  "ignore": ["**/node_modules/**"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
          "alias": {
          "@controllers": "./controllers",
          "@data": "./data",
          "@db": "./db",
          "@functions": "./functions",
          "@middleware": "./middleware",
          "@models": "./models",
          "@plugins": "./plugins",
          "@postman": "./postman",
          "@routes": "./routes",
          "@schemas": "./schemas",
          "@scripts": "./scripts",
          "@tests": "./tests"
        }
      }
    ]
  ]
}
